# ==========================
# Network
# ==========================
ERP_PLATFORM_NETWORK_NAME=erp-platform

# ==========================
# Host ports (exposed)
# ==========================
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090
TEMPO_HTTP_PORT=3200

OTEL_COLLECTOR_OTLP_GRPC_PORT=4317
OTEL_COLLECTOR_OTLP_HTTP_PORT=4318
OTEL_COLLECTOR_PROM_EXPORTER_PORT=8889

# Optional logs stack
LOKI_PORT=3100

# ==========================
# Grafana credentials
# ==========================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me

# ==========================
# Prometheus retention
# ==========================
PROMETHEUS_RETENTION_TIME=15d

# ==========================
# Image tags (pin versions)
# ==========================
OTEL_COLLECTOR_IMAGE_TAG=0.97.0
TEMPO_IMAGE_TAG=2.4.1
PROMETHEUS_IMAGE_TAG=v2.52.0
GRAFANA_IMAGE_TAG=10.4.2
LOKI_IMAGE_TAG=2.9.4
PROMTAIL_IMAGE_TAG=2.9.4

# ==========================
# Internal URLs (Grafana -> backends)
# ==========================
PROMETHEUS_URL=http://prometheus:9090
TEMPO_URL=http://tempo:3200
LOKI_URL=http://loki:3100

# ==========================
# OTel Collector log level
# ==========================
OTELCOL_LOG_LEVEL=info

# Optional environment label injected by OTel Collector
DEPLOYMENT_ENVIRONMENT=dev