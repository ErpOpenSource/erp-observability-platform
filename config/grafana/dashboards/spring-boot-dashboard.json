{
  "uid": "erp-spring-boot",
  "title": "ERP - Spring Boot / JVM (Micrometer)",
  "tags": ["erp", "spring", "jvm", "micrometer"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "job",
        "label": "Job",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(up, job)",
        "refresh": 1,
        "sort": 1
      },
      {
        "type": "query",
        "name": "instance",
        "label": "Instance",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(up{job=\"$job\"}, instance)",
        "refresh": 1,
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Service UP",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "refId": "A", "expr": "up{job=\"$job\",instance=\"$instance\"}" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "timeseries",
      "title": "HTTP Requests / sec",
      "id": 2,
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"$job\",instance=\"$instance\"}[1m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP Error rate (5xx) / sec",
      "id": 3,
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"$job\",instance=\"$instance\",status=~\"5..\"}[1m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Used (bytes)",
      "id": 4,
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "jvm_memory_used_bytes{job=\"$job\",instance=\"$instance\",area=\"heap\"}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "JVM Threads",
      "id": 5,
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "refId": "A", "expr": "jvm_threads_live_threads{job=\"$job\",instance=\"$instance\"}" }
      ]
    },
    {
      "type": "timeseries",
      "title": "GC Pause Time (rate)",
      "id": 6,
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(jvm_gc_pause_seconds_sum{job=\"$job\",instance=\"$instance\"}[1m]))"
        }
      ]
    }
  ]
}