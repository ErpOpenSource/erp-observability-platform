{
  "uid": "erp-gateway",
  "title": "ERP - API Gateway",
  "tags": ["erp", "gateway", "http", "spring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "time": { "from": "now-15m", "to": "now" },
  "templating": {
    "list": [
      {
        "type": "constant",
        "name": "job",
        "label": "Job",
        "query": "erp-api-gateway"
      },
      {
        "type": "query",
        "name": "instance",
        "label": "Instance",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(up{job=\"$job\"}, instance)",
        "refresh": 1,
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "type": "stat",
      "title": "Gateway UP",
      "id": 1,
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        { "refId": "A", "expr": "up{job=\"$job\",instance=\"$instance\"}" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "timeseries",
      "title": "Requests / sec (by route)",
      "id": 2,
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (uri) (rate(http_server_requests_seconds_count{job=\"$job\",instance=\"$instance\"}[1m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p95 (seconds)",
      "id": 3,
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le) (rate(http_server_requests_seconds_bucket{job=\"$job\",instance=\"$instance\"}[5m])))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "5xx Errors / sec",
      "id": 4,
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_server_requests_seconds_count{job=\"$job\",instance=\"$instance\",status=~\"5..\"}[1m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Used (bytes)",
      "id": 5,
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "jvm_memory_used_bytes{job=\"$job\",instance=\"$instance\",area=\"heap\"}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (process)",
      "id": 6,
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "refId": "A",
          "expr": "rate(process_cpu_usage{job=\"$job\",instance=\"$instance\"}[1m])"
        }
      ]
    }
  ]
}